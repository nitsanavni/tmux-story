#!/bin/bash

# Start a tmux session in detached mode to run python3 -q
tmux new-session -d -s test_python_repl_print "python3 -q"

# Wait briefly to ensure the session starts
sleep 1

# Initialize a flag to track if any comparison fails
any_failure=0

# Send the command: print('Hello, world!')
tmux send-keys -t test_python_repl_print "print('Hello, world!')" Enter
# Wait for the specific output: Hello, world!
while ! tmux capture-pane -t test_python_repl_print -p | grep -q "Hello, world!"; do
    sleep 0.1  # Poll every 100ms until the output is found
done
# Capture the output in test_python_repl_print.frame1.received
tmux capture-pane -t test_python_repl_print -p | sed '/^$/d' > test_python_repl_print.frame1.received
# Send the command: print('Goodbye, world!')
tmux send-keys -t test_python_repl_print "print('Goodbye, world!')" Enter
# Wait for the specific output: Goodbye, world!
while ! tmux capture-pane -t test_python_repl_print -p | grep -q "Goodbye, world!"; do
    sleep 0.1  # Poll every 100ms until the output is found
done
# Capture the output in test_python_repl_print.frame2.received
tmux capture-pane -t test_python_repl_print -p | sed '/^$/d' > test_python_repl_print.frame2.received
# Wait for 1 second(s) before next action
sleep 1

# Touch the approved frame file test_python_repl_print.frame1.approved
touch test_python_repl_print.frame1.approved
# Compare received and approved frames for frame1
if ! diff test_python_repl_print.frame1.received test_python_repl_print.frame1.approved > /dev/null; then
    echo "Frames do not match for frame1."
    any_failure=1  # Flag that a failure occurred
fi
# Touch the approved frame file test_python_repl_print.frame2.approved
touch test_python_repl_print.frame2.approved
# Compare received and approved frames for frame2
if ! diff test_python_repl_print.frame2.received test_python_repl_print.frame2.approved > /dev/null; then
    echo "Frames do not match for frame2."
    any_failure=1  # Flag that a failure occurred
fi

# Kill the tmux session after test
tmux kill-session -t test_python_repl_print
if [ $any_failure -ne 0 ]; then
    echo "At least one frame did not match. Launching vimdiff for each failure."
    if ! diff test_python_repl_print.frame1.received test_python_repl_print.frame1.approved > /dev/null; then
        vim -d test_python_repl_print.frame1.received test_python_repl_print.frame1.approved
    fi
    if ! diff test_python_repl_print.frame2.received test_python_repl_print.frame2.approved > /dev/null; then
        vim -d test_python_repl_print.frame2.received test_python_repl_print.frame2.approved
    fi
    exit 1
fi
echo "All frames verified successfully."
exit 0
